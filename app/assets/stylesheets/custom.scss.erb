/* mixins, variables, etc. */


$gray-medium-light: #eaeaea;

@mixin box_sizing {
  -moz-box-sizing:    border-box;
  -webkit-box-sizing: border-box;
  box-sizing:         border-box;
}


/* miscellaneous */

.debug_dump {
  clear: both;
  float: left;
  width: 100%;
  margin-top: 45px;
  @include box_sizing;
}


/* universal */

html, body {
  height: 100%;
  margin: 0;
  padding: 0;
}

body {
  display: flex;
  flex-direction: column;
  background-image: url("<%= asset_path('corkboard_middle_short.jpg') %>");
  background-size: contain;
}

.alert {
  width: 500px;
}

.title {
  background-color: white;
  border-radius: 10px;
  width: 50%;
  height: 70px;
  vertical-align: middle;
  text-align: center;
  color: #deb887;
  line-height: 70px;
  margin: 50px auto;
}


/* typography */

h1, h2, h3, h4, h5, h6 {
  line-height: 1;
}

h1 {
  font-size: 3em;
  letter-spacing: -2px;
  margin-bottom: 30px;
  text-align: center;
}

h2 {
  font-size: 2em;
  letter-spacing: -1px;
  margin-bottom: 30px;
  text-align: center;
  font-weight: normal;
  // color: rgba(#d3d3d3,1.0);
}

p {
  font-size: 1.1em;
  line-height: 1.7em;
}


/* header */

header {
  background-image: url("<%= asset_path('corkboard_upper.jpg') %>");
  background-repeat: no-repeat;
  background-size: cover;
  > div {
    padding: 0 4%;
  }
  
  #logo {
    float: left;
    font-size: 2em;
    text-transform: uppercase;
    letter-spacing: -1px;
    font-weight: bold;
    color: white;
    &:hover {
      color: white;
    }
  }
  a {
    color: silver;
    &:hover {
      color: white;
      text-decoration: none;
    }
  }
  .search_form {
    display: flex;
    .search_text {
      border-radius: 5px 0 0 5px;
    }
    .search_btn {
      color: #663300;
      background-color: white;
      padding: 5px;
      border: 1px solid gray;
      border-radius: 0 5px 5px 0;
    }
  }
}


/* main */

main {
  flex-direction: column;
  flex-grow: 1;
  margin-bottom: 50px;
}


/* footer */

footer {
  background-image: url("<%= asset_path('corkboard_under.jpg') %>");
  background-repeat: no-repeat;
  background-size: cover;
  margin-top: auto;
  text-align: center;
  color: white;
  padding: 15px 0;
  p {
    margin: 0;
  }
}


/* home welcome-page */

.welcome {
  padding: 30px;
  margin: auto;
  h1 {
    font-size: 100px;
  }
  h2 {
    font-size: 60px;
  }
}


/* home micropost */

.home {
  height: 100%;
  flex-direction: column;
  width: 100%;
  margin-bottom: 20px;
  .pagination {
    margin-left: 30px;
  }
  .nav_home {
    .new_post {
      height: 38px;
      margin-left: 15px;
    }
  }
}


/* signup, edit_user, login */

.signup, .edit_user, .login {
  background-image: url("<%= asset_path('husen2.png') %>");
  background-repeat: no-repeat;
  background-size: cover;
  margin: auto;
  padding: 90px 90px 70px 60px;
  flex-direction: column;
  width: 600px;
}


/* forms */

input, textarea, select, .uneditable-input {
  border: 1px solid #bbb;
  width: 100%;
  margin-bottom: 15px;
  @include box_sizing;
}

input {
  height: auto !important;
}

#error_explanation {
  color: red;
}

.field_with_errors {
  .form-control {
    color: text-danger;
  }
}

.checkbox {
  margin-top: -10px;
  margin-bottom: 10px;
  span {
    margin-left: 20px;
    font-weight: normal;
  }
}

#session_remember_me {
  width: auto;
  margin-left: 0;
}


section {
  overflow: auto;
}

textarea {
  resize: vertical;
}

.center {
  text-align: center;
}


.user_board {
  width: 100%;

  /* sidebar */
  aside {
    padding: 10px 0;
    margin-top: 20px;
    
    .user_card{
      background-color: white;
      border-radius: 15px;
      margin: 10% 0;
      height: 300px;
      width: 100%;
      padding: 15px;
      .user_info {
        flex-direction: column;
        img {
          margin-left: 20px;
          margin-right: auto;
        }
        h2 {
          font-size: 1.4em;
          text-align: left;
          letter-spacing: -1px;
          margin: 0 auto 3px 20px;
        }
      }

      .stats {
        overflow: auto;
        margin-top: 0;
        padding-left: 5px;
        a {
          display: block;
          padding: 0 10px;
          color: gray;
          padding-left: 0;
          &:first-child {
            border: 0;
          }
          &:hover {
            text-decoration: none;
            color: blue;
          }
        }
      }
      .btn {
        width: 70%;
        margin: 10px 20px;
      }
    }
    
  }
  
.user_info {
  flex-direction: column;
  img {
    margin-left: 0;
    margin-right: auto;
  }
  h2 {
    magin-left: 10px;
  }
}

  
  
  /* microposts */
  .user_microposts {
    flex-direction: column;
    padding: 0 40px;
    
    .pagination {
      margin-left: 50px;
    }
    img {
      width: 240px;
      height: 170px;
    }
    .pin {
      top: 14px;
      left: 140px;
    }
  }
  
  .gravatar {
    float: left;
    margin-right: 10px;
  }
  
  .gravatar_edit {
    margin-top: 15px;
  }
  
  
  .user_avatars {
    overflow: auto;
    margin-top: 10px;
    .gravatar {
      margin: 1px 1px;
    }
    a {
      padding: 0;
    }
  }
  
  .users.follow {
    padding: 0;
  }
}



/* Users index */
.following_list {
  width: 100%;
  aside {
    background-color: white;
    flex-direction: column;
    width: 100%;
    margin: 60px auto auto auto;
    padding: 30px;
    border-radius: 30px;
    .user_info {
      margin-left: 0;
      > div {
        margin-left: 20px;
        flex-direction: column;
        h2 {
          font-size: 30px;
        }
      }
    }
    > .stats {
      margin: 10px 10px 10px 0;
      a {
        color: gray;
      }
      .stats {
        margin: 5px;
      }
    }
  }
  .user_list {
    div {
      background-color: white;
      margin: 0 40px;
      padding: 20px;
    }
  }
}

.search_users {
  .users_list {
    flex-direction: column;
    p {
      margin: 8px 20px;
      border-bottom: 1px solid gray;
    }
  }
  background-color: white;
  margin: 0 auto;
  padding: 20px;
  width: 50%;
}

.users {
  list-style: none;
  margin: 0;
  li {
    overflow: auto;
    padding: 10px 0;
    border-bottom: 1px solid rgba(#d3d3d3,1.0);
  }
}


/* microposts */

.microposts {
  list-style: none;
  padding: 0;
  li {
    padding: 10px 0;
  }
  .user {
    margin-top: 5em;
    padding-top: 0;
  }
  .content {
    display: block;
    margin: 0 25px;
    img {
      display: block;
      padding: 7px;
    }
  }
  .timestamp {
    color: rgba(#d3d3d3,1.0);
    display: block;
    margin-left: 60px;
  }
  .gravatar {
    float: left;
    margin-right: 10px;
    margin-top: 5px;
  }
  img {
    width: 330px;
    height: 220px;
  }
}

.contribute-element {
  text-align: center;
  margin-bottom: 60px;
  img {
    padding: 5px 10px;
    background-clip: padding-box;
    background-color: #ffffff;
    position: relative;
  }
}

.pin {
  background-image: url("<%= asset_path('pin.png') %>");
  background-repeat: no-repeat;
  position: absolute;
  top: 14px;
  left: 180px;
}


/* micropost-detail */
.micropost_detail {
  flex-direction: column;
  width: 100%;
  .microposts {
    margin: 0 auto;
    width: 34vw;
    img {
      padding: 10px;
      margin: 0 auto;
      background-color: white;
      width: auto;
      height: 18vw;
      max-width: 28vw;
    }
  }
  aside {
    padding: 0 20px;
    .micropost_data {
      background-color: white;
      .data_detail {
        padding: 0 15px 15px 15px;
        .user_info {
          z-index: 2;
          padding: 0;
        }
        p {
          font-size: 15px;
          margin: 0;
          &.created_time {
            font-size: 12px;
          }
        }
        hr {
          margin: 0;
        }
      }
    }
  }
}


/*slick setting*/
.slider {
  width: 34vw;
  margin: 0 auto;
  padding: 0;
  .slick-prev {
    left: 15px !important;
    opacity: 1 !important;
    color: black !important;
    z-index: 1;
  }
  .slick-next {
    right: 15px !important;
    opacity: 1;
    z-index: 1;
  }
  img {
    margin: 0 auto;
    height: 100%;
  }
  .slick-slide {
    height: auto !important;
  }
  .slick-dots li button:before {
    color: white;
    opacity: 1;
  }
  .slick-dots li.slick-active button:before{
    color: black;
    opacity: 1;
  }
}


/* create-micropost */
.create_micropost {
  flex-direction: column;
  width: 100%;
  
  .map {
    height: 350px;
    width: 400px;
    padding: 10px;
    margin: 10% auto;
    background-color: white;
    #map {
      height: 330px;
      width: 380px;
    }
  }
  
  .micropost_form {
    flex-direction: column;
    background-image: url("<%= asset_path('husen2.png') %>");
    background-repeat: no-repeat;
    background-size: cover;
    margin: auto;
    padding: 80px 80px 60px 50px;
    p {
      margin: 0;
      margin-top: 5px;
    }
    .decide_place {
      width: 100%;
      margin: 0 auto;
      button {
        height: 37px;
        margin: auto;
      }
    }
    .image {
      background-color:white;
    }
    .field {
      border: none;
    }
  }
}

/* map */

.map {
  height: 300px;
  width: 400px;
}

#map {
  height: 250px;
  width: 350px;
}

.map_mini {
  height: 14vw;
  width: 100%;
  padding: 10px;
  margin: auto;
  z-index: 1;
}

#map_mini {
  height: 13vw;
  width: 100%;
  margin: 0 auto;
}