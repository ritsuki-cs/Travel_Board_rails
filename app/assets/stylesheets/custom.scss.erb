/* mixins, variables, etc. */


$gray-medium-light: #eaeaea;

@mixin box_sizing {
  -moz-box-sizing:    border-box;
  -webkit-box-sizing: border-box;
  box-sizing:         border-box;
}

/* universal */

body {
  padding-top: 4rem; 
  min-height: 100vh;
  background-image: url("<%= asset_path('corkboard_middle_short.jpg') %>");
  background-size: contain;
  padding-bottom: 60px;
  background-position-y: 0;
  position: relative;
}

section {
  overflow: auto;
}

textarea {
  resize: vertical;
}

.center {
  text-align: center;
  h1 {
    margin-bottom: 10px;
  }
}

/* typography */

h1, h2, h3, h4, h5, h6 {
  line-height: 1;
}

h1 {
  font-size: 3em;
  letter-spacing: -2px;
  margin-bottom: 30px;
  text-align: center;
}

h2 {
  font-size: 2em;
  letter-spacing: -1px;
  margin-bottom: 30px;
  text-align: center;
  font-weight: normal;
  color: rgba(#d3d3d3,1.0);
}

p {
  font-size: 1.1em;
  line-height: 1.7em;
}


/* header */

header {
  background-image: url("<%= asset_path('corkboard_upper.jpg') %>");
  background-repeat: no-repeat;
  background-size: cover;
  
  #logo {
    float: left;
    font-size: 2em;
    text-transform: uppercase;
    letter-spacing: -1px;
    font-weight: bold;
    color: white;
    &:hover {
      color: white;
    }
  }
  a {
    color: silver;
    &:hover {
      color: white;
      text-decoration: none;
    }
  }
}


/* footer */

footer {
  background-image: url("<%= asset_path('corkboard_under.jpg') %>");
  background-repeat: no-repeat;
  background-size: cover;
  height: 60px;
  width: 100%;
  position: absolute;
  bottom: 0;
}

/* miscellaneous */

.debug_dump {
  clear: both;
  float: left;
  width: 100%;
  margin-top: 45px;
  @include box_sizing;
}

/* sidebar */

aside {
  .user_card{
    background-color: white;
    border-radius: 15px;
    margin: 10% 0;
    height: 300px;
    width: 100%;
    padding: 5px 15px;
    .btn {
      margin-top: 10px;
    }
  }
  
  section.user_info {
    margin-top: 20px;
  }
  section {
    padding: 10px 0;
    margin-top: 20px;
    &:first-child {
      border: 0;
      padding-top: 0;
    }
    span {
      display: block;
      margin-bottom: 3px;
      line-height: 1;
    }
    h1 {
      font-size: 1.4em;
      text-align: left;
      letter-spacing: -1px;
      margin-bottom: 3px;
      margin-top: 0px;
    }
  }
}

.gravatar {
  float: left;
  margin-right: 10px;
}

.gravatar_edit {
  margin-top: 15px;
}

.stats {
  overflow: auto;
  margin-top: 0;
  padding: 0;
  a {
    padding: 0 10px;
    color: gray;
    &:first-child {
      padding-left: 0;
      border: 0;
    }
    &:hover {
      text-decoration: none;
      color: blue;
    }
  }
  strong {
    display: block;
  }
}

.user_avatars {
  overflow: auto;
  margin-top: 10px;
  .gravatar {
    margin: 1px 1px;
  }
  a {
    padding: 0;
  }
}

.users.follow {
  padding: 0;
}

/* forms */

input, textarea, select, .uneditable-input {
  border: 1px solid #bbb;
  width: 100%;
  margin-bottom: 15px;
  @include box_sizing;
}

input {
  height: auto !important;
}

#error_explanation {
  color: red;
  ul {
    color: red;
    margin: 0 0 30px 0;
  }
}

.field_with_errors {
  .form-control {
    color: text-danger;
  }
}

.checkbox {
  margin-top: -10px;
  margin-bottom: 10px;
  span {
    margin-left: 20px;
    font-weight: normal;
  }
}

#session_remember_me {
  width: auto;
  margin-left: 0;
}

/* Users index */

.users {
  list-style: none;
  margin: 0;
  li {
    overflow: auto;
    padding: 10px 0;
    border-bottom: 1px solid rgba(#d3d3d3,1.0);
  }
}

/* microposts */

.microposts {
  list-style: none;
  padding: 0;
  li {
    padding: 10px 0;
  }
  .user {
    margin-top: 5em;
    padding-top: 0;
  }
  .content {
    display: block;
    margin-left: 30px;
    img {
      display: block;
      padding: 7px;
    }
  }
  .timestamp {
    color: rgba(#d3d3d3,1.0);
    display: block;
    margin-left: 60px;
  }
  .gravatar {
    float: left;
    margin-right: 10px;
    margin-top: 5px;
  }
}

aside {
  textarea {
    height: 100px;
    margin-bottom: 5px;
  }
}

div.image {
  margin-top: 10px;
  input {
    border: 0;
  }
}

/* signup, edit_user, login */
.signup, .edit_user {
  background-image: url("<%= asset_path('husen2.png') %>");
  background-repeat: no-repeat;
  background-size: contain;
  background-position: 52% center;
  margin: 60px 80px 30px 80px;
  padding: 70px 70px 70px 70px;
}

.login {
  background-image: url("<%= asset_path('husen2.png') %>");
  background-repeat: no-repeat;
  background-size: contain;
  background-position: 52% center;
  margin: 60px 80px 30px 80px;
  padding: 70px 70px 70px 70px;
}

.welcome {
  padding: 30px;
  position: center;
  border-radius: 30px;
  h1 {
    margin-bottom: 20px;
    font-size: 100px;
  }
  background-color: none;
}

/* micropost-home */
.contribute-element {
  text-align: center;
  margin-bottom: 70px;
}

.pin {
  background-image: url("<%= asset_path('pin.png') %>");
  background-repeat: no-repeat;
  position: absolute;
  top: 14px;
  left: 170px;
}

.contribute-element img {
  padding: 5px 10px;
  background-clip: padding-box;
  background-color: #ffffff;
  position: relative;
}

.title {
    background-color: white;
    border-radius: 10px;
    width: 50%;
    height: 70px;
    vertical-align: middle;
  h1, h2 {
    text-align: center;
    color: #deb887;
    line-height: 70px;
  }
  margin: 0 auto 50px auto;
}

/*slick setting*/
.slick-prev:before,
.slick-next:before {
  color: #000;
}
.slider {
  position: absolute;
  padding: 1vw;
  width: 47%;
  height: 24vw;
  float: left;
  top: 1vw;
}
.slider img {
  height: 18vw;
  width: auto;
  object-fit: cover;
  margin: auto;
  margin-top: 2vw;
}
.image-detail ul {
  position: relative;
  bottom: 5vw;
  background: #fffcf4;
  border-radius: 15px; /*角の丸み*/
  box-shadow: none;
  padding: 0.1vw;
  margin-top: 5vw;
  margin-left: auto;
  margin-right: auto;
  width: 90%;
  li {
    line-height: 1.5;
    padding: 0.5em 0;
  }
  .slick-dots {
    height: 0;
  }
}
.edit a,
.delete a {
  color: white;
}

/* map */
.map {
  height: 300px;
  width: 400px;
}

#map {
  height: 250px;
  width: 350px;
}

.map_mini {
  height: 220px;
  width: 270px;
  padding: 10px;
  background-color: white;
}

#map_mini {
  height: 200px;
  width: 250px;
}