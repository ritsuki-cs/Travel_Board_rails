<header class="navbar navbar-expand-md navbar-dark">
  <div class="collapse navbar-collapse" id="navbarNavDropdown">
    <ul class="navbar-nav mr-auto">
      <%= link_to "travel board", root_path, id: "logo" %>
    </ul>
    <ul class="navbar-nav">
      <% if logged_in? %>
        <li class="nav-item">
          <%= form_with url: search_path, local: true, class: "search_form", method: :get do |f| %>
            <%= f.text_field :word, placeholder: "Search", value: params[:word], class: "col-md-7 search_text" %>
            <%= f.select :range, options_for_select([['User'], ['Post']], selected: params[:range]), {}, {class: "col-md-4"} %>
            <%= button_tag type: "submit", class: "btn btn-default search_btn col-md-1" do %>
            <i class="fa-solid fa-magnifying-glass"></i>
            <% end %>
          <% end %>
        </li>
      <% end %>
      <li class="nav-item active"><%= link_to "Home", root_path, class: "nav-link" %></li>
      <% if logged_in? %>
        <li class="nav-item dropdown">
          <a href="#" class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Account
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <%= link_to "Profile", current_user, class: "dropdown-item" %>
            <%= link_to "Settings", edit_user_path(current_user), class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "Log out", logout_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <%= link_to "Log in", login_path, class: "nav-link" %>
      <% end %>
    </ul>
  </div>
</header>