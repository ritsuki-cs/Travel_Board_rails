<% provide(:title, @user.name) %>
<div class="row user_board">
  <aside class="col-md-2">
    <div class="user_card">
      <div class="user_info row">
        <%= gravatar_for @user %>
        <h2><%= @user.name %></h2>
        <%= render 'follow_form' if logged_in? %>
      </div>
      <%= render 'shared/stats' %>
      <% if current_user?(@user) %>
        <%= link_to "New Post", new_micropost_path, class: "btn btn-primary", style: "width: 100%; margin-left: 0;" %>
      <% end %>
    </div>
  </aside>
  <div class="col-md-10 row user_microposts">
    <h2 class="title">Microposts (<%= @user.microposts.count %>)</h2>
    <% if @user.microposts.any? %>
      <%= will_paginate @microposts %>
      <ol class="microposts row">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>