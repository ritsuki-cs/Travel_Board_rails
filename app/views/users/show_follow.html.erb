      <!--      <%#= link_to gravatar_for(user, size: 30), user %>-->
      <!--    <%# end %>-->
      <!--  </div>-->
      <!--<%# end %>-->
    </section>
  </aside>
  <div class="col-md-6 user_list">
    <h2 class="title"><%= @title %></h2>
    <div>
      <% if @users.any? %>
        <ul class="users follow">
          <%= render @users %>
        </ul>
        <%= will_paginate %>
      <% end %>
    </div>
  </div>
</div>